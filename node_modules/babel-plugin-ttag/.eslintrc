{
  "env": {"mocha": true},
  "globals": {
    "_": true
  },
  "extends": "@evo/eslint-config-uaprom",
  "rules": {
    "no-unused-expressions": "off",
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_$" }],
    "prefer-const": ["error", {"destructuring": "all"}],
    "no-underscore-dangle": ["error", {"allow": [
      "_C3PO_visited",
      "_C3PO_GETTEXT_CONTEXT",
      "_ORIGINAL_NODE"
    ]}]
  }
}
